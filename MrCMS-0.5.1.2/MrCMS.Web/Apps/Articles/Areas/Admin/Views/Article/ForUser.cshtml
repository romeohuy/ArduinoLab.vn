@model IList<MrCMS.Web.Apps.Articles.Pages.Article>
@if (Model.Any())
{
    <fieldset>
        <legend>Articles</legend>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Name
                    </th>
                    <th>Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)
                {
                    <tr>
                        <td>
                            @article.Name
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Webpage", new { id = article.Id }, new { @class = "btn-xs btn btn-default" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
}