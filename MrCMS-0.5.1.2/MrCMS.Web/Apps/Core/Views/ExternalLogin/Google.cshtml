@model Microsoft.Owin.Security.AuthenticationDescription
@{var returnUrl = ViewData["returnUrl"] as string;}
@using (Html.BeginForm("Login", "ExternalLogin", new { ReturnUrl = returnUrl }))
{
    <button type="submit" class="zocial googleplus" id="@Model.AuthenticationType" name="provider" value="@Model.AuthenticationType" title="Log in using your @Model.Caption account">@Resource("Login with") @Model.AuthenticationType</button>
}
