@using MrCMS.Helpers
@model MrCMS.Entities.Documents.Web.FormProperties.FormListOption
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("DeleteOption", "Form", FormMethod.Post))
{
    <fieldset>
        <legend>@Resource("Admin Form Delete Option Title", "Delete option")
        <span class="btn-group  display-inline  pull-right">
            <input type="button" class="btn btn-danger submit-form-btn" value="@Resource("Admin Form Delete Option Button", "Delete form option")" />
        </span>
        </legend>
        @Resource("Admin Form Delete Option Warning", "Deleting cannot be undone, do you want to proceed?")
    </fieldset>
}
@{ Html.IncludeScript("~/Areas/Admin/Content/Scripts/mrcms/form-builder.js"); }