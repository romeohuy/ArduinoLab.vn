@using MrCMS.Helpers
@model MrCMS.Entities.Multisite.RedirectedDomain

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "RedirectedDomain", new { id = Model.Id }, FormMethod.Post, new { style = "display:inline;" }))
{
    <fieldset>
        <legend>@Resource("Admin Redirected Domain Delete Title", "Delete Redirected Domain")
                 <span class="btn-group  display-inline  pull-right">
                     <input type="submit" class="btn btn-danger" value="@Resource("Delete")" />
                 </span>
        </legend>
        @Html.InfoBlock(Resource("Heads up") + "!", Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}