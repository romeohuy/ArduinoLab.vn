@using MrCMS.Helpers
@using MrCMS.Website
@model MrCMS.Entities.Resources.StringResource
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}

@using (Html.BeginForm("Delete", "Resource", FormMethod.Post))
{
    @Html.ReturnToReferrer()
    <fieldset>
        <legend>@Resource("Admin Resources Delete Override", "Delete resource") 
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn-primary btn" value="@Resource("Delete")" />
            </span>
        </legend>
        @Html.InfoBlock(Resource("Heads up") + "!", Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}