{
    <div id="upload-anywhere">
        @{ Html.RenderAction("Upload", "MediaCategory", new { category = Model }); }
        <hr class="small-margin" />
        @{ Html.RenderAction("ShowFilesSimple", "MediaCategory", new { category = Model }); }
    </div>
}
@{
    Html.IncludeScript("~/Areas/Admin/Content/Scripts/mrcms/media-show-files-simple.js");
}